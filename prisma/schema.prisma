generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Comment {
  comment_id    Int          @id @default(autoincrement())
  name          String?
  topic         String?
  content       String?
  upvotes       Int          @default(0)
  createdAt     DateTime     @default(now()) @map(name: "created_at")
  updatedAt     DateTime     @updatedAt @map(name: "updated_at")
  author        User         @relation(fields: [authorId], references: [user_id])
  authorId      Int
  resolved      Boolean      @default(false)
  parentCommentId Int?       @map(name: "parent_comment_id")
  parentComment Comment?     @relation("CommentReplies", fields: [parentCommentId], references: [comment_id])
  replies       Comment[]    @relation("CommentReplies")
  anonymous        Boolean   @default(false)
  department	String?
  priority		String?
  category		String?
  @@map(name: "comments")
}

model Role {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  permissions   Permission[]  @relation("RolePermissions")
  users         User[]        @relation("UserRole")
}

model Permission {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  roles         Role[]        @relation("RolePermissions")
}

model User {
  user_id       Int           @id @default(autoincrement())
  password      String?       @unique
  name          String?	      @default("Anonymous")
  email         Bytes?       @unique @db.ByteA
  comments      Comment[]
  roles         Role[]        @relation("UserRole")
}
